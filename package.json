{
  "name": "cloudtech-monitoring",
  "version": "1.0.0",
  "description": "Distributed monitoring system for cloud infrastructure",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "sonar": "npm run test:coverage && sonar-scanner",
    "sonar:local": "npm run test:coverage && sonar-scanner -Dsonar.host.url=http://localhost:9000",
    "quality:check": "npm run lint && npm run test:coverage",
    "security:check": "snyk test --severity-threshold=high",
    "security:monitor": "snyk monitor",
    "security:code": "snyk code test",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js"
  },
  "dependencies": {
    "express": "^4.18.0",
    "mongoose": "^7.0.0",
    "cors": "^2.8.5",
    "helmet": "^6.0.1"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
