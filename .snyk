# Snyk (https://snyk.io) policy file

# Ignore specific vulnerabilities (examples - customize as needed)
# ignore:
#   SNYK-JS-MINIMIST-559764:
#     - '*':
#       reason: 'Low risk in our usage context'
#       expires: '2025-12-31T00:00:00.000Z'

# Patch specific vulnerabilities
patch: {}

# Language settings
language-settings:
  javascript:
    # Fail on severity threshold
    severity-threshold: high

# Exclude paths from scanning
exclude:
  global:
    - node_modules/**
    - coverage/**
    - dist/**
    - build/**
    - '**/*.test.js'
    - '**/*.spec.js'

# Configuration
version: v1.22.1

